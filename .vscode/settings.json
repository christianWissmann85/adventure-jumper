{
  // Dart & Flutter settings
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "dart.analysisExcludedFolders": [
    "**/build"
  ],
  "dart.enableSdkFormatter": true,
  "dart.openDevTools": "flutter",
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "dart.showDartDeveloperLogs": true,
  "dart.vmAdditionalArgs": [
    "--enable-asserts"
  ],
  "dart.warnWhenEditingFilesOutsideWorkspace": false,
  "dart.warnWhenEditingFilesInPubCache": false,
  // Flutter specific settings
  "flutter.screenshotPath": "screenshots",
  "flutter.showWebServerDevicePreview": false,
  "flutter.createOffline": true,
  "flutter.createOrganization": "",
  "flutter.iosLanguages": [
    "en",
    "es",
    "de",
    "fr",
    "it",
    "pt",
    "ru",
    "zh"
  ],
  // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "Dart-Code.dart-code",
  "editor.rulers": [
    80,
    100
  ],
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  // Default formatter for Dart files
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code"
  },
  // File exclusions
  "files.exclude": {
    "**/.dart_tool": true,
    "**/.pub": true,
    "**/build": true,
    "**/.flutter-plugins": true,
    "**/.flutter-plugins-dependencies": true
  },
  // Search settings
  "search.exclude": {
    "**/.dart_tool": true,
    "**/.pub": true,
    "**/build": true,
    "**/packages": true
  },
  // Terminal settings
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
  // Extension settings
  "extensions.ignoreRecommendations": false,
  "dart.pubAdditionalArgs": [
    "--no-precompile"
  ],
  "dart.pubTestAdditionalArgs": [
    "--reporter",
    "expanded"
  ],
  "dart.runPubGetOnPubspecChanges": "always",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}