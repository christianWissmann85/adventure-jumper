# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{dart,json,yaml,yml,md}]
indent_size = 2

[*.{js,ts,jsx,tsx,css,scss,html}]
indent_size = 2

[*.{gradle,kts}]
indent_size = 4

[*.{xml,svg}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
